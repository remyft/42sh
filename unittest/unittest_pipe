echo "ls -l | cat -e"
ls -l | cat -e

echo "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"

echo "ls -l | cat -e | wc -l"
ls -l | cat -e | wc -l

echo "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"

echo "ls -l | cat -e | wc -l | cat -e"
ls -l | cat -e | wc -l | cat -e

echo "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"

